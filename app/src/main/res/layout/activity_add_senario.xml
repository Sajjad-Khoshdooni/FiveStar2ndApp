<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Senario.AddSenarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="clip_vertical"
            android:text="Choose Devices"
            android:textColor="@color/textColor"
            android:textSize="24sp" />

        <Button
            android:id="@+id/choose_device_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@drawable/button_capsule"
            android:text="Create Group"
            android:textColor="@color/textColor" />

        <EditText
            android:id="@+id/senario_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_capsule"
            android:gravity="center"
            android:hint="Senario Name"
            android:textColor="@color/textColor"
            android:textColorHighlight="@color/textColorDark"
            android:textColorHint="@color/textColorDark"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/choose_senario_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>